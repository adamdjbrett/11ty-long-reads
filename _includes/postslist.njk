{% for post in postslist | reverse %}
<article class="border-top row p-3">
<h2 class="col-8"><a href="{{ post.url }}">{{post.data.title}}</a></h2>
<p class="col-4 mt-2 text-end"><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time></p>
</article>
{% endfor %}
